          // //
          // // //화장실 마커
          // // var image = new google.maps.MarkerImage( "/src/icon/toilet.png",new google.maps.Size(size_x, size_y),'','',new google.maps.Size(size_x, size_y));
        var icons = {
          marker: {
            icon: '/location.png'
          },
          info: {
            icon: '/화장실.png'
          }
        };


        nowlocation = new google.maps.Marker({
          position: mapLocation, // 마커가 위치할 위도와 경도(변수)
          map: map,
          icon: icons.marker.icon, // 마커로 사용할 이미지(변수)
    //      info: '말풍선 안에 들어갈 내용',
          title: '현재 위치 입니다.' // 마커에 마우스 포인트를 갖다댔을 때 뜨는 타이틀
        });

        <% for(var j=0; j<to.length; j++){ %>
          bath<%= [j] %> = new google.maps.Marker({
            position: bathLocation<%= [j] %>, // 마커가 위치할 위도와 경도(변수)
            map: map,
            icon: icons.info.icon, // 마커로 사용할 이미지(변수)
      //      info: '말풍선 안에 들어갈 내용',
